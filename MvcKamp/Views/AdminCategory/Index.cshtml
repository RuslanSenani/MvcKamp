@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table  table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Titles</th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <th>@category.CategoryId</th>
            <td>@category.CategoryName</td>
            <td><a href="/AdminCategory/DeleteCategory/@category.CategoryId" class="btn btn-danger">Delete</a></td>
            <td><a href="/AdminCategory/UpdateCategory/@category.CategoryId" class="btn btn-warning">Update</a></td>
            <td><a href="#" class="btn btn-primary">Titles</a></td>
        </tr>
    }
</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-primary" style="margin: 10px">New Category</a>