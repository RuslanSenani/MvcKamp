@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Site wrapper -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Heading</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>

        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                            Heading Name
                        </th>
                        <th style="width: 15%">
                            Writer
                        </th>
                        <th style="width: 10%">
                            Status
                        </th>
                        <th style="width: 8%" class="text-center">
                            Category
                        </th>
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.HeadingId
                            </td>
                            <td>
                                <a>
                                    @item.HeadingName
                                </a>
                                <br />
                                <small>
                                    @item.Date.ToString("dd-MMMM-yyyy")
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="~/AdminLTE-3.0.4/dist/img/avatar.png">
                                    </li>
                                </ul>
                            </td>
                            <td>

                                @switch (@item.HeadingStatus)
                                {
                                    case true:
                                        <span class="badge badge-info">Active</span>
                                        break;
                                    case false:
                                        <span class="badge badge-danger">Passive</span>
                                        break;
                                }
                            </td>

                            <td class="project-state">
                                <span class="badge badge-success">@item.Category.CategoryName</span>
                            </td>

                            <td class="text-right">
                                <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingId">
                                    <i class="fas fa-folder">
                                    </i>
                                    Content
                                </a>
                                <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingId">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Update
                                </a>
                                @switch (@item.HeadingStatus)
                                {
                                    case true:
                                        <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Passive
                                        </a>
                                        break;
                                    case false:
                                        <a class="btn btn-info btn-sm" href="/Heading/DeleteHeading/@item.HeadingId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Active
                                        </a>
                                        break;

                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<a href="/Heading/AddHeading/" class="btn btn-info">Add</a>
