@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->
@Html.Action("ContentPartialHeader", "Contact")
<!-- Main content -->
<section class="content">
    <div class="row">
        @Html.Action("ContactPartialMenu", "Contact")
        <!-- /.col -->
        <div class="col-md-9">
            @using (Html.BeginForm("NewMessage", "Message", FormMethod.Post))
            {
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Compose New Message</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control", @placeholder = "To:" })
                            @Html.ValidationMessageFor(x => x.ReceiverMail, "", new { @class = "text-danger" })
                            <br />
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Subject:" })
                            @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @*<textarea id="compose-textarea" name="MessageContent" class="form-control" style="height: 300px"></textarea>*@
                            @Html.TextAreaFor(x => x.MessageContent, new { @id = "compose-textarea", @class = "form-control", @placeholder = "Subject:", @style = "height: 300px" })
                                @Html.ValidationMessageFor(x => x.MessageContent, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <div class="btn btn-default btn-file">
                                <i class="fas fa-paperclip"></i> Attachment
                                <input type="file" name="attachment">
                            </div>
                            <p class="help-block">Max. 32MB</p>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="float-right">
                            <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Draft</button>
                            <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Send</button>
                        </div>
                        <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Discard</button>
                    </div>
                    <!-- /.card-footer -->
                </div>
            }
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

